{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": false
  },
  "include": [
    "main.ts",
    "handler.ts",
    "plugins/**/*.ts",
    "lib/**/*.ts",
    "config.ts"
  ]
}
